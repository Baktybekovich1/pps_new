FROM php:8.2-fpm

# Установка зависимостей и необходимых расширений
RUN apt-get update && \
    apt-get install -y \
        libpq-dev \
        git \
        zlib1g-dev \
        libzip-dev && \
    docker-php-ext-install \
        pdo \
        pdo_pgsql \
        pgsql \
        zip && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Установка Composer
COPY --from=composer:latest /usr/bin/composer /usr/local/bin/composer

# Создание и настройка пользователя
RUN useradd -u 1000 -m user

# Создание и настройка рабочей директории
RUN mkdir -p /app && \
    chown user:user /app

USER user

WORKDIR /app

# Копирование файлов и установка зависимостей через Composer
COPY --chown=user:user . /app

RUN mkdir -p config/jwt && \
    chmod -R 777 config/jwt

# Генерация ключей JWT
RUN openssl genpkey -algorithm RSA -out config/jwt/private.pem -aes256 -pass pass:kuma \
    && openssl pkey -in config/jwt/private.pem -out config/jwt/public.pem -pubout -passin pass:kuma

USER root

RUN composer install

USER user

CMD ["php-fpm"]
